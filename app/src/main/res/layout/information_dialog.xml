<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#f1f1f1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:id="@+id/dialog_title"
            android:text="알림"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:background="#dcdcdc"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/activity_horizontal_margin"
                android:textSize="16dp"
                android:text="할 일을 정할 수 있는 시간은"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="#8a8d92"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/activity_horizontal_margin"
                    android:textSize="16dp"
                    android:text="18:00 ~ 02:00"
                    android:textStyle="bold"
                    android:textColor="#8a8d92"
                    android:id="@+id/editable_time"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/activity_horizontal_margin"
                    android:textSize="16dp"
                    android:text=" 시입니다."
                    android:textColor="#8a8d92"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/activity_horizontal_margin"
                android:textSize="16dp"
                android:text="시간에 맞추어 다시 시도해주세요\n'설정 > 나의 오늘밤 시간대 설정'\n부분에서 변경이 가능합니다"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="#8a8d92"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#f1f1f1"
                android:text=""/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="확인"
                android:id="@+id/dialog_okay"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#f1f1f1"
                android:text=""/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>