<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/x"
            android:background="#efefef"
            android:textColor="#000000"
            android:id="@+id/cancel_button"
             />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#efefef"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="내일, 내 일?" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/check"
            android:background="#efefef"
            android:textColor="#000000"
            android:id="@+id/done_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="#dcdcdc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:id="@+id/todo_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="12월 09일 (금) 19시"
            android:textSize="15dp"
            android:id="@+id/todo_time"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:id="@+id/todo_item"
                android:background="@android:color/transparent"
                android:textSize="18dp"
                android:hint="직접 입력"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:layout_weight="0"
        android:background="#dcdcdc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14dp"
                android:text="글자 색상 선택"
                android:padding="5dp"
                android:textColor="#000000"
                android:background="#efefef"
                android:id="@+id/text_color_picker"
                />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14dp"
                android:text="배경 색상 선택"
                android:padding="5dp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:id="@+id/background_color_picker"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#efefef">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/color_picker_01"
                android:background="#ff0000"
                />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/color_picker_02"
                android:background="#ff9900"
                />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/color_picker_03"
                android:background="#ffe600"
                />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/color_picker_04"
                android:background="#3cff00"
                />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/color_picker_05"
                android:background="#00ffe1"
                />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/color_picker_06"
                android:background="#0011ff"
                />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/color_picker_07"
                android:background="#6600ff"
                />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/color_picker_08"
                android:background="#fb00ff"
                />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/color_picker_09"
                android:background="#000000"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:layout_weight="0"
        android:background="#ededed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#34a853">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textColor="#34a853"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="MEMORIZE"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:textColor="#FFFFFF"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:src="@drawable/plus"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/memorize_arrange"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/memorize_list_view">
                </ListView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0"
            android:background="#dcdcdc"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4285f4"
            android:weightSum="100"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4285f4">

                <TextView
                    android:layout_width="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#4285f4"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:text="MUST DO"
                    android:padding="5dp"
                    android:textColor="#FFFFFF"
                    />

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:src="@drawable/plus"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:id="@+id/mustdo_arrange"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/must_do_list_view">
                </ListView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>