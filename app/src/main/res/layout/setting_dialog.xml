<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#f1f1f1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:id="@+id/dialog_title"
            android:text="설정"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:background="#dcdcdc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/setting_theme"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="○ 테마 설정"
                    android:padding="7dp"
                    android:textColor="#545659"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text=" - TODO 리스트의 할 일 테마 설정하기"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#8a8d92"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:background="#dcdcdc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/setting_layout_theme"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="○ 리스트 형태 설정"
                    android:padding="7dp"
                    android:textColor="#545659"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text=" - TODO 리스트의 형태 설정하기"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#8a8d92"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:background="#dcdcdc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="○ 푸시 알림 설정"
                    android:padding="7dp"
                    android:textColor="#545659"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical">

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:text=""
                        android:id="@+id/push_switch"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text=" - 미래 일정에 대한 푸시 알림"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:textColor="#8a8d92"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text=" - 해제 시 모든 알람 해제"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:textColor="#8a8d92"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:layout_weight="0"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:background="#dcdcdc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/setting_my_time_zone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="○ 오늘밤 시간대 설정"
                        android:paddingLeft="7dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textColor="#545659"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="(현재 22시)"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#545659"
                        android:id="@+id/my_editable_time"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text=" - 나만의 오늘밤 시간대 설정하기"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="#8a8d92"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_weight="0"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#dcdcdc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#f1f1f1"
                android:text=""/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="닫기"
                android:id="@+id/okay_button"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#f1f1f1"
                android:text=""/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>